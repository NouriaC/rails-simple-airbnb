<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="cards d-flex flex-wrap justify-content-around">
      <% @flats.each do |flat| %>
      <div class="card mb-5" style="width: 24rem;">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name.capitalize %></h5>
          <p class="card-text"><%= flat.address %></p>
          <i class="fas fa-user-friends"></i> <span><%= flat.number_of_guests %></span>
          <span><%= flat.price_per_night %> </span> <i class="fas fa-euro-sign"></i>
        </div>
        <div class="card-body">
          <a href="#" class="card-link">Card link</a>
          <a href="#" class="card-link">Another link</a>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

