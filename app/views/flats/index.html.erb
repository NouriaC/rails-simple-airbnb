<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>
</div>

  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col">
         <h4><%= flat.name %></h4>
         <p><%= flat.address %></p>
        <i class="fas fa-user-friends"></i> <span><%= flat.number_of_guests %></span>
        <span><%= flat.price_per_night %> </span> <i class="fas fa-euro-sign"></i>
      <% end %>
    </div>
  </div>

